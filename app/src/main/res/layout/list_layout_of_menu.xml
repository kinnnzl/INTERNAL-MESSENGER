<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llSummarry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/openSum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imSumL"
                android:layout_width="51dp"
                android:layout_height="35dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/txtSumL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_toEndOf="@+id/imSumL"
                android:layout_toRightOf="@id/imSumL"
                android:text="เอกสารขาเข้า" />

            <TextView
                android:id="@+id/txtSumR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="121dp"
                android:layout_marginLeft="121dp"
                android:layout_marginEnd="13dp"
                android:layout_toStartOf="@+id/imSumR"
                android:layout_toEndOf="@+id/imSumL"
                android:layout_toRightOf="@id/imSumL"
                android:text="ดูเอกสารขาเข้า"
                android:textAlignment="textEnd"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imSumR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                app:srcCompat="@drawable/ic_right" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>